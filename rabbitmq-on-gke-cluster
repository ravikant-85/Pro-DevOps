curl https://raw.githubusercontent.com/helm/helm/master/scripts/get-helm-3 | bash
gcloud container clusters get-credentials <your-cluster-name> --region <region>
export KUBECONFIG=/path/to/kubeconfig
kubectl get nodes
--------------------------------------------------------
helm install rabbitmq bitnami/rabbitmq \
  --namespace rabbitmq \
  --set auth.username=admin \
  --set auth.password=strongpassword \
  --set auth.erlangCookie=secretcookie \
  --set replicaCount=2 \
  --set persistence.enabled=true \
  --set metrics.enabled=true
-------------------------------------------------------
kubectl port-forward svc/rabbitmq 15672:15672 -n rabbitmq
-------------------------------------------------------
service:
  type: LoadBalancer
-------------------------------------------------------

helm upgrade rabbitmq bitnami/rabbitmq \
  --namespace rabbitmq \
  --set service.type=LoadBalancer
-------------------------------------------------------
kubectl get svc -n rabbitmq
-------------------------------------------------------
--set tls.enabled=true \
--set tls.existingSecret=rabbitmq-tls \
--set tls.autoGenerated=false

--------------------------------------------------------

persistence:
  enabled: true
  storageClass: "premium-rwo" # GKE
  size: 10Gi

-------------------------------------------------------

metrics:
  enabled: true
  serviceMonitor:
    enabled: true # If you're using Prometheus Operator
